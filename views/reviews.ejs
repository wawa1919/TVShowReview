<header>
    <%-include('pages/main.ejs')%>
</header>
<body>
    <div class="text-center" style="font-size: 20px; font-family: Arial, Helvetica, sans-serif;"> TV show reviews </div>
    <div class="">
        <div class="container-fluid" style="padding: 2%; ">
        <form class="" action="/get_feed" method="post">
            <div class="row">
                <div class="col-3"></div>
                <div class="col-5">
                    <input class="form-control" id="filterBar" type="text" name="title" placeholder="Enter movie title">
                </div>
                <div class="col-1">
                    <input class="btn btn-primary" type="submit" value="Filter" onclick="this.form.submit()"/>
                </div>
            </div>
        </form>
    </div>
    </div>
    <table class="table table-bordered" id="stats_table">
        <tr>
            <th class="align-bottom" rowspan="2">TV Show</th>
            <th class="align-bottom"rowspan="2">Review</th>
            <th class="align-bottom" rowspan="2">Review Date</th>
        </tr>
        <% if (reviewData.length != 0) {
            var i = 1;
            reviewData.forEach(function(data) {
        %>
        <tr>
             <td> <%= data.tv_show %> </td>
             <td> <%= data.review %> </td>
             <td> <%= data.review_date %> </td>
         </tr>
         <% i++; }) %>
         <% } else { %>
        <tr>
            <td colspan="7"> NO Data Found </td>
        </tr>
        <% } %>
    </table>
</body>
