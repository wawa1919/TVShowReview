<style>
  .form-group {
    size: 14px;
  }
</style>

<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal">
  Add Review
</button>

<div class="modal" id="myModal">
  <div class="modal-dialog">
    <div class="modal-content">

      <div class="modal-header">
        <h4 class="modal-title">Add Review</h4>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>

      <div class="form-group">
        <div>
            <input type="text" class="form-control input-lg" name="name" value="" placeholder="Book Name">
        </div>
      </div>
      <div class="form-group">
        <div>
            <input type="text" class="form-control input-lg" name="name" value="" placeholder="Enter your review here:">
        </div>
      </div>

      <!-- Modal footer -->
      <div class="modal-footer">
        <button id="my_submit_button" class="btn btn-primary submit-btn" data-dismiss="modal" onclick = "this.form.submit()">Submit</button>
      </div>

    </div>
  </div>
</div>

